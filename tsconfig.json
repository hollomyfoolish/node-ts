{
    "compileOnSave": true,
    "compilerOptions": {
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "module": "commonjs",
      "outDir": "./target",
    //   "module": "amd",
    //   "outFile": "./target/app.js"
      "target": "es6",
      "sourceMap": true,
      "alwaysStrict": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }